            "servertype": "openocd",
            "cwd": "${workspaceFolder}/build",
            "executable": "${workspaceFolder}/build/OGX-Mini.elf",
            "device": "RP2040",
            "configFiles": [
                "/usr/local/share/openocd/scripts/interface/cmsis-dap.cfg",
                "/usr/local/share/openocd/scripts/target/rp2040.cfg"
            ],
            "runToEntryPoint": "main",
            "preLaunchTask": "CMake Build",
            "svdFile": "",
            "openOCDLaunchCommands": [
                // "set USE_CORE 1",
                "adapter speed 1000"
            ],
            "openOCDPreConfigLaunchCommands": [],
            "postRestartCommands": [],
            "postLaunchCommands": [
                // "handle SIGINT nostop noprint pass",
                // "handle SIGTRAP nostop noprint pass"
            ],
            "searchDir": [
                "/usr/local/share/openocd/scripts/"
            ]
        },
        {
            "name": "Debug RP2350",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}/build",
            "executable": "${workspaceFolder}/build/OGX-Mini.elf",
            "device": "RP2350",
            "configFiles": [
                "/openocd-rp2040/tcl/interface/cmsis-dap.cfg",
                "/openocd-rp2040/tcl/target/rp2350.cfg"
            ],
            "runToEntryPoint": "main",
            "preLaunchTask": "",
            "svdFile": "",
            "openOCDLaunchCommands": [
                "set USE_CORE 0",
                "adapter speed 5000"
            ],
            "openOCDPreConfigLaunchCommands": [],
            "postRestartCommands": [],
            "postLaunchCommands": [],
            "searchDir": [
                "/openocd-rp2040/tcl"
            ]
        },
    ]
